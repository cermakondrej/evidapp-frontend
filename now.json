{
  "version": 2,
  "name": "evidapp-frontend",
  "regions": [
    "bru"
  ],
  "builds": [
    {
      "src": "package.json",
      "use": "@now/static-build",
      "config": {
        "maxLambdaSize": "35mb"
      }
    }
  ],
  "routes": [
    {
      "src": "/(js|css|img)/.*",
      "headers": { "cache-control": "max-age=31536000, immutable" }
    },
    { "handle": "filesystem" },
    { "src": ".*", "dest": "/" }
  ],
  "env": {
    "PROJECT_NAME": "evidapp-frontend",
    "APP_ENV": "prod",
    "API_URL": "https://tichysvet-evidapp.randef.com/v1"
  }
}
